{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": false,

    "types": ["node"],
    "lib": ["ES2020"],

    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
